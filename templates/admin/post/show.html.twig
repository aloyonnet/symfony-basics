{% extends 'admin/base.html.twig' %}

{% block title %}{{post.title}}{% endblock %}

{% block body %}
    <h1>Article "{{ post.title }}"</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Propriétaire</th>
                <td>{{ post.author.username }} ( id: {{ post.author.id }})</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ post.createdAt|format_datetime('none', 'none', 'EEEE d MMMM Y') }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Actions</th>
                <td>
                    <div class="d-flex flex-row">
                        <a class="btn btn-outline-primary" href="{{ path('admin_post_edit', {'id': post.id}) }}">Modifier</a>
                        {{ include('admin/post/components/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-outline-primary" href="{{ path('admin_post_index') }}">Retour à la liste</a>
</div>

{% endblock %}