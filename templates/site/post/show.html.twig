{% extends 'base.html.twig' %}

{% block title %}{{post.title}}{% endblock %}

{% block body %}
    <h1>Article "{{ post.title }}"</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Propriétaire</th>
                <td>{{ post.author.username }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ post.createdAt|format_datetime('none', 'none', 'EEEE d MMMM Y') }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-outline-primary" href="{{ path('post_index') }}">Retour à la liste</a>
</div>

{% endblock %}