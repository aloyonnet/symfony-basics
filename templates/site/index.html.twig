{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    {{ component('Wrapper', {
        title: "Exemple de page d'accueil",
        controller: "/src/Controller/SiteController.php",
        template: "/templates/site/index.html.twig"
    }) }}

    <h2>Articles récents</h2>
    <div class="d-flex flex-wrap">
    {% for post in posts %}
        <div class="card m-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{ post.title }}</h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">Publié par {{post.author.username }}</h6>
                <p class="card-text">{{ post.content }}</p>
                <a href="{{ path('post_show', {'id': post.id}) }}" class="btn btn-primary">Voir</a>
            </div>
        </div>
    {% else %}
        Aucun article n'a été trouvé.
    {% endfor %}
    </div>
{% endblock %}