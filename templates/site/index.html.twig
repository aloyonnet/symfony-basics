{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% if app.user %}
    <div class="card m-3">
        <h5 class="card-header">Vous êtes connecté</h5>
        <div class="card-body">
            <h5 class="card-title">Bienvenue {{ app.user.username }}</h5>
            <p class="card-text">Vous avez pu vous connecter grâce au système d'utilisateur de Symfony</p>
            <a href="{{ path('logout') }}" class="btn btn-primary">Déconnexion</a>
        </div>
    </div>
{% endif %}
<div class="example-wrapper">
    <h1>Bienvenue {{ controller_name }}! ✅</h1>
    Ce message provient de :
    <ul>
        <li>Le controlleur dans <code>/src/Controller/SiteController.php</code></li>
        <li>Le template dans<code>/templates/site/index.html.twig</code></li>
    </ul>
</div>
{% endblock %}